<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_article_new_01"
        android:layout_width="139dp"
        android:layout_height="210dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/card_resep_shape"
        android:orientation="vertical"
        android:layout_marginEnd="10dp">

        <ImageView
            android:id="@+id/image_artikel_new01"
            android:layout_width="139dp"
            android:layout_height="130dp"
            android:background="@drawable/card_resep_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_artikel_1"></ImageView>

        <TextView
            android:id="@+id/judul_artikel_new01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Judul Artikel"
            android:textColor="@color/green_900"
            android:textSize="11sp"></TextView>
    </LinearLayout>