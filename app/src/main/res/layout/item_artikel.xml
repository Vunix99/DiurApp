<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/card_resep_shape"
        android:backgroundTint="@color/grey_100"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="30dp">

        <ImageView
            android:id="@+id/imageArtikel"
            android:layout_width="fill_parent"
            android:layout_height="115dp"
            android:background="@drawable/border_radius_top_only"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_artikel_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_artikel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"
                android:text="Judul Artikel"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/deskripsi_singkat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:text="Deskripsi Singkat"
            android:textColor="@color/black_700"
            android:textSize="13sp" />

        <Button
            android:id="@+id/buttonReadArtikel"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/green_300"
            android:fontFamily="@font/inter_bold"
            android:text="Read More"
            android:textAlignment="center"
            android:textColor="@color/black_700"
            android:textSize="13sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
